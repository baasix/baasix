{
  "name": "baasix-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Baasix - Backend-as-a-Service Monorepo",
  "type": "module",
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build -w @baasix/baasix -w @baasix/mcp -w @baasix/sdk -w baasix -w @baasix/plugin-stripe --if-present",
    "build:core": "npm run build -w @baasix/baasix",
    "build:cli": "npm run build -w baasix",
    "build:mcp": "npm run build -w @baasix/mcp",
    "build:sdk": "npm run build -w @baasix/sdk",
    "build:types": "npm run build -w @baasix/types",
    "build:plugin-stripe": "npm run build -w @baasix/plugin-stripe",
    "dev": "npm run dev -w @baasix/baasix",
    "dev:core": "npm run dev -w @baasix/baasix",
    "dev:cli": "npm run dev -w baasix",
    "dev:mcp": "npm run dev -w @baasix/mcp",
    "dev:sdk": "npm run dev -w @baasix/sdk",
    "test": "npm run test -w @baasix/baasix",
    "test:core": "npm run test -w @baasix/baasix",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:all": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "publish:all": "npm run build && changeset publish",
    "version:packages": "changeset version",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baasix/baasix.git"
  },
  "author": "Vivek Palanisamy",
  "license": "MIT",
  "homepage": "https://www.baasix.com"
}
