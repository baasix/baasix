{
  "name": "@baasix/plugin-stripe",
  "version": "0.1.2",
  "description": "Stripe payment integration plugin for Baasix - supports one-time payments and subscriptions",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "baasix",
    "plugin",
    "stripe",
    "payments",
    "subscriptions",
    "checkout",
    "billing"
