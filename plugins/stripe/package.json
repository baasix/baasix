  },
  "peerDependenciesMeta": {
    "stripe": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baasix/baasix.git",
    "directory": "plugins/stripe"
  },
  "bugs": {
    "url": "https://github.com/baasix/baasix/issues"
  },
